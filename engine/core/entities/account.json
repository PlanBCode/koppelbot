{
  "_": {
    "connector": {
      "type": "file",
      "parse": "json",
      "path": "data/accounts.json"
    },
    "access": {
      "head" : ["/group/guest","/group/system"]
    }
  },
  "email": {
    "type": "string",
    "regex": "^TODO$",
    "default": "hello@default.com",
    "connector": {
      "key": "key"
    },
    "access" : {
      "read" : ["/group/system"],
      "create" : ["/group/guest"],
      "delete" : ["/group/admin"]
    }
  },
  "password": {
    "type": "password",
    "access" : {
      "read" : ["/group/system"],
      "createBlind" : ["/group/guest"],
      "writeBlind" : ["/account/$email"],
      "delete" : ["/group/admin"]
    }
  },
  "username": {
    "type": "string",
    "minLength": 3,
    "access" : {
      "read" : ["/group/guest"],
      "createBlind" : ["/group/guest"],
      "writeBlind" : ["/account/$email"],
      "delete" : ["/group/admin"]
    }
  },
  "groups" : {
    "auto" : true,
    "type" : "array",
    "default" : ["/group/guest"],
    "subType" : {
      "type" : "reference",
      "uri": "/group/*/name"
    },
    "access" : {
      "read" : ["/group/user:$username","/group/system"],
      "delete" : ["/group/admin"]
    }
  }
}
