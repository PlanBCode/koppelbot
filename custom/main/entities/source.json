{
  "_": {
    "connector": {
      "type": "directory",
      "parse": "none",
      "path": "data/sources/",
      "extension": "*"
    },
    "access" : {
      "read" : ["guest"]
    }
  },
  "file": {
    "signature": {
      "content": {
        "type": "string",
        "binary": true,
        "connector": {
          "key": "content"
        },
        "accept": "TODO"
      },
      "id": {
        "title": true,
        "type": "string",
        "connector": {
          "key": "basename"
        }
      },
      "extension": {
        "type": "string",
        "connector": {
          "key": "extension"
        }
      },
      "mime": {
        "type": "string",
        "connector": {
          "key": "mime"
        }
      }
    },
    "type": "file"
  },
  "note" : {
    "type": "string",
    "connector": {
      "type": "directory",
      "parse": "none",
      "path": "data/sources/meta/",
      "extension": "meta",
      "key": "content"
    }
  }
}
