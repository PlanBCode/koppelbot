{
  "_": {
    "connector": {
      "type": "directory",
      "parse": "json",
      "path": "data/locations/",
      "extension": "json"
    },
    "access" : {
      "write" : ["/group/guest"]
    }
  },
  "id": {
    "type": "id",
    "autoIncrement": true,
    "connector": {
      "key": "basename"
    }
  },
  "title" : {
    "displayName": "Title",
    "title": true,
    "type": "string",
    "minLength": 1
  },
  "date": {
    "displayName": "Date",
    "type": "date",
    "format": "d-m-Y"
  },
  "photo": {
    "signature":{
      "content": {
        "type": "string",
        "binary": true,
        "connector": {
          "type": "directory",
          "parse": "none",
          "path": "data/locations/photos/",
          "extension": "*",
          "key": "content"
        }
      },
      "extension":{
        "type": "string"
      }
    },
    "accept": "image/*",
    "type": "file"
  },
  "geojson" : {
    "type": "geojson"
  }
}
