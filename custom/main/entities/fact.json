{
  "_": {
    "connector": {
      "type": "directory",
      "parse": "json",
      "path": "data/facts/",
      "extension": "json"
    }
  },
  "id": {
    "type": "id",
    "autoIncrement": true,
    "connector": {
      "key": "basename"
    }
  },
  "title" : {
    "type": "string",
    "minLength": 1
  },
  "date": {
    "type": "date",
    "format": "d-m-Y"
  },
  "sources" : {
    "type": "array",
    "subType": {
      "type": "reference",
      "uri": "/source/*/file/id"
    }
  }
}
