{
  "_": {
    "connector": {
      "type": "directory",
      "parse": "json",
      "path": "data/sample/types/",
      "extension": "json"
    },
    "access" : {
      "write" : ["admin"]
    }
  },
  "id": {
    "type": "id",
    "autoIncrement": true,
    "connector": {
      "key": "basename"
    }
  },
  "string": {
    "minLength": 3,
    "maxLength": 6,
    "type": "string"
  },
  "enum": {
    "type": "enum",
    "choices": [
      "red",
      "blue",
      "green"
    ]
  },
  "bool": {
    "type": "bool"
  },
  "number": {
    "type": "number",
    "step": 1,
    "max": 10,
    "min": 1
  },
  "array": {
    "type": "array",
    "subType": {
      "minLength": 3,
      "type": "string"
    }
  },
  "object": {
    "type": "object",
    "subType": {
      "type": "string"
    }
  },
  "reference": {
    "type": "reference",
    "uri": "/account/*",
    "connector": {
      "type": "directory",
      "parse": "none",
      "path": "data/samples/",
      "extension": "meta",
      "key": "content"
    }
  },
  "date": {
    "type": "date",
    "format": "d-m-Y"
  }
}
